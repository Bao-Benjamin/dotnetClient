@page "/addbook"
@inherits AddBookBase
@rendermode InteractiveServer


<h3>Add New Staff</h3>
<form=" @book" method="post">
    <div class="form-group">
        <label for="bookId">First Name</label>
        <InputText id="bookId" class="form-control" @bind-Value="book.Name" />
    </div>

    <div class="form-group">
        <label for="bookName">Pubisher</label>
        <InputText id="bookName" class="form-control" @bind-Value="book.Publisher" />
    </div>

    <div class="form-group">
        <label for="bookPrice">bookPrice</label>
        <InputNumber id="bookPrice" class="form-control" @bind-Value="book.Price" />
    </div>

   

    <button type="submit" class="btn btn-primary" onclick="@submit">Add Staff</button>
    </form>